{
    "clientId": "https://$(env:EE_HOSTNAME)/bookstack/saml2/metadata",
    "description": "Bookstack client",
    "enabled": "$(env:ENABLE_BOOKSTACK)",
    "protocol": "saml",
    "surrogateAuthRequired": false,
    "clientAuthenticatorType": "client-secret",
    "rootUrl": "https://$(env:EE_HOSTNAME)",
    "baseUrl": "/bookstack",
    "redirectUris": [
        "/bookstack/saml2/acs"
    ],
    "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "true",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml_assertion_consumer_url_post": "/bookstack/saml2/asc",
        "saml.server.signature": "true",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
        "saml_single_logout_service_url_redirect": "/bookstack/saml2/sls",
        "saml.signature.algorithm": "RSA_SHA256",
        "saml_force_name_id_format": "false",
        "saml.client.signature": "false",
        "tls.client.certificate.bound.access.tokens": "false",
        "saml.authnstatement": "true",
        "display.on.consent.screen": "false",
        "saml_name_id_format": "username",
        "saml_signature_canonicalization_method": "http://www.w3.org/2001/10/xml-exc-c14n#",
        "saml.onetimeuse.condition": "false"
    },
    "authenticationFlowBindingOverrides": {},
    "fullScopeAllowed": false,
    "nodeReRegistrationTimeout": -1,
    "protocolMappers": [
        {
          "name": "lastName",
          "protocol": "saml",
          "protocolMapper": "saml-user-property-mapper",
          "consentRequired": false,
          "config": {
            "attribute.nameformat": "Basic",
            "user.attribute": "lastName",
            "attribute.name": "lastName"
          }
        },
        {
          "name": "role",
          "protocol": "saml",
          "protocolMapper": "saml-role-list-mapper",
          "consentRequired": false,
          "config": {
            "single": "true",
            "friendly.name": "role",
            "attribute.name": "Role"
          }
        },
        {
          "name": "email",
          "protocol": "saml",
          "protocolMapper": "saml-user-property-mapper",
          "consentRequired": false,
          "config": {
            "attribute.nameformat": "Basic",
            "user.attribute": "email",
            "attribute.name": "email"
          }
        },
        {
          "name": "firstName",
          "protocol": "saml",
          "protocolMapper": "saml-user-property-mapper",
          "consentRequired": false,
          "config": {
            "attribute.nameformat": "Basic",
            "user.attribute": "firstName",
            "attribute.name": "firstName"
          }
        },
        {
          "name": "username",
          "protocol": "saml",
          "protocolMapper": "saml-user-property-mapper",
          "consentRequired": false,
          "config": {
            "attribute.nameformat": "Basic",
            "user.attribute": "username",
            "attribute.name": "username"
          }
        },
        {
          "name": "cn",
          "protocol": "saml",
          "protocolMapper": "saml-javascript-mapper",
          "consentRequired": false,
          "config": {
            "single": "true",
            "Script": "user.firstName + ' ' + user.lastName;",
            "attribute.name": "cn"
          }
        }
      ]
}